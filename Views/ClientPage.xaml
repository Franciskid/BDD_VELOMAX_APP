<UserControl x:Class="BDD_VELOMAX_APP.Views.ClientPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BDD_VELOMAX_APP.Views"
             mc:Ignorable="d" 
             Background="Red"
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid Background="purple" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="250"  Width="250">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Background="Purple" TextChanged="TextBox_TextChanged" >

        </TextBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Image Grid.Row="1" Source="../Images\Yanis Dahmouche West Event Poster.png"/>

            <TextBox  Text="Téléphone" Background="purple" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </StackPanel>
    </Grid>
</UserControl>
